{
  "name": "backend",
  "version": "1.1.2",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "node ace build --production",
    "start": "node server.js",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write ."
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.9.6",
    "@faker-js/faker": "^8.4.1",
    "@japa/preset-adonis": "^1.2.0",
    "@japa/runner": "^2.5.1",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.2",
    "eslint-plugin-adonis": "^2.1.1",
    "nodemon": "^3.1.10",
    "pino-pretty": "^10.3.1",
    "prettier": "^2.8.8",
    "typescript": "~5.1.6",
    "youch": "^3.3.4",
    "youch-terminal": "^2.2.3"
  },
  "dependencies": {
    "@adonisjs/auth": "^8.2.3",
    "@adonisjs/core": "^5.9.0",
    "@adonisjs/lucid": "^18.4.2",
    "@adonisjs/repl": "3.1.11",
    "@adonisjs/view": "^6.2.0",
    "@hyzyla/pdfium": "^2.1.9",
    "@repo/common": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "adonis-lucid-soft-deletes": "^1.4.4",
    "base-x": "^5.0.1",
    "cron-parser": "^5.4.0",
    "cron-schedule": "^5.0.4",
    "cronstrue": "^3.3.0",
    "date-fns": "^4.1.0",
    "handlebars": "^4.7.8",
    "lodash": "^4.17.21",
    "luxon": "^3.7.2",
    "nunjucks": "^3.2.4",
    "pg": "^8.16.3",
    "phc-argon2": "^1.1.4",
    "playwright": "^1.56.0",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.14",
    "sharp": "^0.34.4",
    "source-map-support": "^0.5.21",
    "sprintf-js": "^1.1.3",
    "sqids": "^0.3.0"
  }
}
